<h1>Friends</h1>


<div class="card">
  <div class="card-header">
  <p>
  <%= @friend.first_name %>
  <%= @friend.last_name %>
  </p>

  </div>
  <div class="card-body">
    <p>
    <strong>Email:</strong>
    <%= @friend.email %>
    </p>

    <p>
    <strong>Phone:</strong>
    <%= @friend.phone %>
    </p>

    <p>
    <strong>Twitter:</strong>
    <%= @friend.twitter %>
    </p>


    <%= link_to 'Edit', edit_friend_path(@friend) ,class:"btn btn-warning" %>
    <%= link_to 'Back', friends_path ,class:"btn btn-secondary"%>

  </div>
</div>



